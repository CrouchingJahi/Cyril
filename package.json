{
  "name": "cyril",
  "version": "0.0.1",
  "description": "A desktop finance management app",
  "main": "src/app.js",
  "scripts": {
    "start": "gulp serve",
    "dev": "gulp dev",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CrouchingJahi/Cyril.git"
  },
  "keywords": [
    "finance",
    "money",
    "spending"
  ],
  "author": "Jahi Crouch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CrouchingJahi/Cyril/issues"
  },
  "homepage": "https://github.com/CrouchingJahi/Cyril#readme",
  "dependencies": {
    "banking": "^1.1.0",
    "electron": "^1.7.5",
    "lokijs": "^1.5.0",
    "radium": "^0.19.4",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.24.1",
    "electron-connect": "^0.6.2",
    "gulp": "^3.9.1",
    "jest": "^20.0.4"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      [
        "babel-plugin-root-import",
        [
          {
            "rootPathPrefix": "~",
            "rootPathSuffix": "src/ui"
          },
          {
            "rootPathPrefix": "@",
            "rootPathSuffix": "src/services"
          }
        ]
      ],
      "transform-decorators-legacy"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/ui/**/*.jsx",
      "src/services/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "src/ui/cyril.jsx"
    ],
    "roots": [
      "tests"
    ]
  }
}
